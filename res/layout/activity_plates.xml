<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"    
    tools:context="com.panfletovia.activities.PlatesActivity"
    style="@style/AppTheme">
	
    <include layout="@layout/menu_header"/>
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
	    <LinearLayout
	        android:id="@+id/plates_linearlayout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"/>
    </ScrollView>
    	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
	    <Button 
	        android:id="@+id/plates_btn_add"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:onClick="addPlate"
	        android:text="@string/add"/>
	    
	    <Button 
	        android:id="@+id/plates_btn_remove"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:onClick="removePlate"
	        android:text="@string/remove"/>
    </LinearLayout>
</LinearLayout>
